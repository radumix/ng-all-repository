<h1>User Details</h1>
<div class="container">
  <div class="card p-4 shadow-sm">
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
    <div class="text-center mt-4 container">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning btn-sm" %> |
