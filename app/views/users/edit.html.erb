<h1 class="text-center my-4">Edit User</h1>

<%= form_with model: @user, local: true, html: { class: 'container' } do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %><br>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Update User", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="row">
  <div class="col text-center">
    <%= link_to 'Back to Users List', about_path, class: "btn btn-secondary btn-sm" %>
  </div>
</div>